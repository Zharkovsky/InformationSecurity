<Window x:Class="InformationSecurity.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InformationSecurity"
        mc:Ignorable="d"
        Title="Лабораторная работа ИБЗИ №1" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="Введите текст" Grid.Column="0" Margin="10 0"/>
            <Button Content="Выбрать файл" Grid.Column="1" Margin="10 0" Width="100" HorizontalAlignment="Left" Click="Button_Click_2"/>
        </Grid>
        <TextBox x:Name="Input" Grid.Row="1" Margin="10 0" Height="100"/>
        <Grid Grid.Row="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="Ключ по строкам" Grid.Row="0" Grid.Column="0" Margin="10 0"/>
            <TextBox x:Name="RowKey" Grid.Row="1" Grid.Column="0" Margin="10 0"/>
            <TextBlock Text="Ключ по столбцам" Grid.Row="0" Grid.Column="1" Margin="10 0"/>
            <TextBox x:Name="ColumnKey" Grid.Row="1" Grid.Column="1" Margin="10 0"/>
            <Button Content="Кодировать" Grid.Row="2" Grid.Column="0" Click="Button_Click" Margin="10"/>
            <Button Content="Декодировать" Grid.Row="2" Grid.Column="1" Click="Button_Click_1" Margin="10"/>
        </Grid>
        <TextBlock Text="Результат" Grid.Row="3" Margin="10 0"/>
        <TextBox x:Name="Output" Grid.Row="4" Height="100" Margin="10 0"/>
        <TextBlock x:Name="Error" Grid.Row="5" Margin="10 0"/>
    </Grid>
</Window>
